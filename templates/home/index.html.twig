{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div style="margin: 3rem auto; max-width: 600px; text-align: center;">
    <h1>{{ title }}</h1>
    <p style="font-size: 1.2rem; color: #666;">{{ message }}</p>
    
    <div style="margin-top: 2rem; padding: 1rem; background: #f0f0f0; border-radius: 8px;">
        <h2>Quick Links</h2>
        <ul style="list-style: none; padding: 0;">
            <li style="margin: 0.5rem 0;">
                <a href="https://symfony.com/doc/current/index.html" target="_blank">Symfony Documentation</a>
            </li>
            <li style="margin: 0.5rem 0;">
                <a href="{{ path('app_health') }}">Health Check API</a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}
